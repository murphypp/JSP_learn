<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ucar.training.dao.IRoleDao">

    <!--返回一个用户的角色-->
    <select id="findRoleByUsername"  parameterType="String" resultType="com.ucar.training.entity.Role">
        select role.id,roleName,rolePs from
        role,user_role,user
        where role.id = user_role.role_id and `user`.id=user_role.user_id and user.username=#{username}
    </select>


    <!--根据角色Id返回所有角色的所有权限-->
    <select id="findPermissionById"  resultType="com.ucar.training.entity.Permission">
            select * from permission
             where permission.id in(
             select per_id from role_permission
             WHERE role_id =#{id})
    </select>

    <!--返回所有角色-->
    <select id="getAllRole"  resultType="com.ucar.training.entity.Role">
        SELECT * from role
    </select>

    <!--新增-->
    <insert id="addRole" parameterType="com.ucar.training.entity.Role" >
        insert into role(id,roleName,rolePs)
        values (#{id},#{roleName},#{rolePs})
    </insert>

    <!--新增-->
    <insert id="addRolePermission"  >
        insert into role_permission(role_id,per_id,permissionName)
        values (#{arg0},#{arg1},#{arg2})
    </insert>

    <!--删除-->
    <delete id="deleteRole"  >
        delete from role where id=#{id}
    </delete>

    <!--修改-->
    <update id="modifyRole" parameterType="com.ucar.training.entity.Role">
        update role set
            id=#{id},
            roleName=#{roleName},
            rolePs=#{rolePs}
            where id=#{id}
    </update>


</mapper>