<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>ModifyUser</servlet-name>
    <servlet-class>com.ucar.training.dao.ModifyUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyUser</servlet-name>
    <url-pattern>/ModifyUser</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>com.ucar.training.dao.DeleteUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/DeleteUser</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteUploadedFile</servlet-name>
    <servlet-class>com.ucar.training.services.DeleteUploadedFile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteUploadedFile</servlet-name>
    <url-pattern>/DeleteUploadedFile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DownloadFile</servlet-name>
    <servlet-class>com.ucar.training.services.DownloadFile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadFile</servlet-name>
    <url-pattern>/DownloadFile</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>UploadFile</servlet-name>
    <servlet-class>com.ucar.training.services.UploadFile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadFile</servlet-name>
    <url-pattern>/UploadFile</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListUploadedFiles</servlet-name>
    <servlet-class>com.ucar.training.services.ListUploadedFiles</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListUploadedFiles</servlet-name>
    <url-pattern>/ListUploadedFiles</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.ucar.training.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegisterCheck</servlet-name>
    <servlet-class>com.ucar.training.controller.RegisterCheck</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterCheck</servlet-name>
    <url-pattern>/RegisterCheck</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginCheck</servlet-name>
    <servlet-class>com.ucar.training.controller.LoginCheck</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCheck</servlet-name>
    <url-pattern>/LoginCheck</url-pattern>
  </servlet-mapping>

  <!-- 过滤器声明 -->
  <filter>
    <filter-name>CharactorFilter</filter-name>
    <filter-class>com.ucar.training.filter.CharactorFilter</filter-class>
    <init-param>
      <param-name>CharsetEncoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharactorFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

<filter>
<filter-name>UserFilter</filter-name>
<filter-class>com.ucar.training.filter.UserFilter</filter-class>
<init-param>
  <param-name>blackList</param-name>
  <param-value>zhangsan,lisi,wangwu</param-value>
</init-param>
</filter>
<filter-mapping>
<filter-name>UserFilter</filter-name>
<url-pattern>/RegisterServlet</url-pattern>
</filter-mapping>

  <listener>
    <listener-class>com.ucar.training.filter.ListenerTest</listener-class>
  </listener>

</web-app>