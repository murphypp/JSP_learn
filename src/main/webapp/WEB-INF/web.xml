<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <filter>
    <filter-name>encoding</filter-name>
    <filter-class>com.ucar.training.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>message</filter-name>
    <filter-class>com.ucar.training.filter.MessageFilter</filter-class>
    <init-param>
      <param-name>badWords</param-name>
      <param-value>卧槽,操,草,日了,妈的</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>message</filter-name>
    <url-pattern>/addMessage</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>userRegist</servlet-name>
    <servlet-class>com.ucar.training.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userRegist</servlet-name>
    <url-pattern>/userRegist</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>checkUser</servlet-name>
    <servlet-class>com.ucar.training.controller.UserAjaxServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkUser</servlet-name>
    <url-pattern>/checkUser</url-pattern>
        </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.ucar.training.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>upload</servlet-name>
    <servlet-class>com.ucar.training.controller.UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>download</servlet-name>
    <servlet-class>com.ucar.training.controller.DownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>download</servlet-name>
    <url-pattern>/download</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>deleteUser</servlet-name>
    <servlet-class>com.ucar.training.controller.DeleteUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteUser</servlet-name>
    <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>updateUser</servlet-name>
    <servlet-class>com.ucar.training.controller.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateUser</servlet-name>
    <url-pattern>/updateUser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>addMessage</servlet-name>
    <servlet-class>com.ucar.training.controller.AddMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addMessage</servlet-name>
    <url-pattern>/addMessage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>deleteMessage</servlet-name>
    <servlet-class>com.ucar.training.controller.DeleteMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteMessage</servlet-name>
    <url-pattern>/deleteMessage</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>viewMessages</servlet-name>
    <servlet-class>com.ucar.training.controller.ViewMessagesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>viewMessages</servlet-name>
    <url-pattern>/viewMessages</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>listFile</servlet-name>
    <servlet-class>com.ucar.training.controller.ListFileServlet</servlet-class>
  </servlet>
    <servlet-mapping>
    <servlet-name>listFile</servlet-name>
    <url-pattern>/listFile</url-pattern>
  </servlet-mapping>


    <listener>
    <listener-class>com.ucar.training.listener.ContextListener</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>